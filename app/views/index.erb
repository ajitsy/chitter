<head>
  <% if current_user %>
    <meta http-equiv="refresh" content="0; url=/peeps" />
  <% end %>
</head>

<div id="left_container">
  <div id=intro >Welcome to Chitter!
    <br><br>
    <p id=intro_text >The place for Facebook statuses you don't want your relatives to see.</p>
  </div>
</div>

<% if !current_user %>

<div class="container">
  <div class="login">
    <div id=login_message>Log in to Chitter</div>
    <form action='/sessions' method='post'>
      <p><input name='email' placeholder="Email*" type='text'></p>
      <p><input name='password' placeholder='Password*' type='password'></p>
      <p><input type='submit' id="login_button" value='Log in to Chitter!'></p>
    </form>
  </div>
  <br>
  <div class="login">
    <div id=login_message>New to Chitter? Sign up</div>
    <form action='/users' method='post'>
      <p><input name='first_name' placeholder='First Name*' type='text'></p>
      <p><input name='last_name' placeholder='Last Name*' type='text'></p>
      <p><input name='username' placeholder='Username*' type='text'></p>
      <p><input name='email' placeholder="Email*" type='text' value='<%= @user.email %>'></p>
      <p><input name='password' placeholder='Password*' type='password'></p>
      <p><input type='submit' id="login_button" value='Sign up for Chitter!'></p>
    </form>
  </div>
</div>
<% end %>
</div>
